  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "nodemon",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",

      // ? nodeman hot reloading debugger
      "runtimeExecutable": "nodemon",
      "console": "integratedTerminal",
      "restart": true
    }
  ]
}
