extends ../templates/main.pug

append stylesheets
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    form.product-form(action="/admin/edit-product/" + product.id, method="POST")
      .form-control
        label(for="title") Title
        input(id="title", name="title", value=product.title)
      .form-control
        label(for="imageUrl") Image URL
        input(id="imageUrl", name="imageUrl", value=product.imageUrl)
      .form-control
        label(for="price") Price
        input(id="price", name="price", type="number", step="0.01", value=product.price)
      .form-control
        label(for="description") Description
        textarea(id="description", name="description", rows="5")
          =product.description

      button.btn(type="submit") Save
