extends ../templates/main.pug

block content
  main.centered
    h1= product.title
    hr
    div
      img(src=product.imageUrl, alt=product.title, style={
        width: '500px',
        height: '400px',
        'object-fit': 'contain'
      })
    h2= (Number(product.price).toLocaleString())
    p= product.description
    form(action="/cart", method="post")
      input(type="hidden", name="id", value=product.id)
      button.btn(type="submit") Add to Cart
