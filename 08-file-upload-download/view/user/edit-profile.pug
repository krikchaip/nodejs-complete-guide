extends ../template/main.pug

block content
  form.form(action=`/user/edit-profile?_csrf=${_csrf}`, method="post", enctype="multipart/form-data")
    label.textbox.
      First name #[input(name="firstname", value=user.firstname)]
    label.textbox.
      Last name #[input(name="lastname", value=user.lastname)]
    label.textbox.
      Age #[input(name="age", type="number", value=user.age)]
    label.textbox
      | Sex
      |
      select(name="sex")
        option(value="") -- Choose Below --
        option(value="male", selected=(user.sex === 'male')) male
        option(value="female", selected=(user.sex === 'female')) female
    label.textbox.
      New Avatar #[input(name="avatar", type="file")]
    img.avatar(src=user.avatar, alt="user_avatar", style={ margin: '0.5rem 0' })

    button(type="submit") Submit
