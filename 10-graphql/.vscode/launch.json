  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "smartStep": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/server",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/?(../)node_modules/**"
      ]
    }
  ]
}
