{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@graphql/*": ["graphql/*"],
      "@lib/*": ["lib/*"],
      "@model/*": ["model/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.{spec,test}.ts"]
}
